---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      Hi, I'm Akshath.
    </h4>
    <div class="space-y-16">
      <section class="animate space-y-6">
        <article class="space-y-4">
          <p class="animate">
            I'm currently a software engineer at
            <Link
              href="https://www.harness.io"
              aria-label="Link to the home page of Harness"
              external>Harness</Link
            >, helping build <Link
              href="https://www.traceable.ai"
              aria-label="Link to the home page of Traceable.ai"
              external>security tooling</Link
            > to help businesses secure their applications. In my spare time, I'm
            a <Link
              href="https://www.zaproxy.org/docs/team/ricekot/"
              aria-label="Link to the ZAP core team member page for Akshath Kothari"
              external>core contributor</Link
            > to the open-source <Link
              href="https://www.zaproxy.org"
              aria-label="Link to the home page of ZAP"
              external>ZAP</Link
            > project.
          </p>

          <p class="animate">
            I love computers and everything to do with them. I use this blog to
            write about programming, hacking, and ideas I find interesting. The
            views expressed here are my own.
          </p>

          <p class="animate">
            My handle <em>ricekot</em> comes from my name. “Akshath” (अक्षत, /ʌkʃəθ/)
            means “rice” in Hindi. “kot” comes from my surname “Kothari” (कोठारी,
            /kotʰari/).
          </p>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Latest posts</h5>
          <Link href="/archive/"> See all posts </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            blog.map((post) => (
              <li>
                <ArrowCard entry={post} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-4">
        <h5 class="font-semibold text-black dark:text-white">Contact</h5>
        <ul class="flex flex-wrap gap-2">
          {
            SOCIALS.map((SOCIAL) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link
                  href={SOCIAL.HREF}
                  external
                  aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
                >
                  {SOCIAL.NAME}
                </Link>
                {"/"}
              </li>
            ))
          }
          <li class="line-clamp-1">
            <Link
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.NAME}`}
            >
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
